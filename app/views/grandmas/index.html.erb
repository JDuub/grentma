<h1 class="text-center m-5 ">Welcome to grentma!</h1>
<div class="container">
<div class="row">
<div class="d-flex align-content-stretch justify-content-between flex-wrap">
<% @grandmas.each do |grandma| %>
  <div class="card">
      <%= link_to grandma , class:"disable_decoration" do %>
    <div class="card-img">
      <img src= <%= grandma.image_url %> />
    </div>
    <div class="card-inner">
      <div class="header">
        <h2><%= grandma.first_name %></h2>
        <h3><%= grandma.skills %></h3>
      </div>
      <div class="content">
        <p><%= grandma.description %></p>
      </div>
    </div>
  </div>
      <% end %>
 <% end %>
 <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

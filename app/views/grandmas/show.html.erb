<div class="container">
  <div class="main-image">
    <img src="<%= @grandma.image_url %>" />
  </div>
  <div class="d-flex flex-nowrap align-items-start ">
    <% feed_photos = JSON.parse(@grandma.feed_photos).shuffle.uniq.first(3) %>
    <% if feed_photos.any? %>
      <div class="order-2 p-2">
        <% feed_photos.each do |photo| %>
          <img src="<%= photo %>" />
        <% end %>
      </div>
    <% end %>
  </div>
</div>
 

<div class="main-text" style="position: relative;left: 60px;top: 24px;">

 <h3><%= @grandma.first_name %>  <%= @grandma.last_name %></h3>
 <p><%= @grandma.skills %></p>


</div>


<div class="container">
  <div class="row">
    <div class="col-md-6 main-image">
      <img src="<%= @grandma.image_url %>" width="721" height="419" style="position:relative;top:42px;left: 22px;width: 600px;height: 360px;">
    </div>
    <% feed_photos = JSON.parse(@grandma.feed_photos).shuffle.uniq.first(4) %>
    <% if feed_photos.any? %>
      <div class="col-md-6 feed-photos">
        <div class="position-absolute" style="width:422px; height:419px; top:257px;">
          <div class="row">
            <% feed_photos.each_slice(2) do |slice| %>
              <div class="col-6">
                <% slice.each do |photo| %>
                  <img src="<%= photo %>" class="img-fluid" />
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



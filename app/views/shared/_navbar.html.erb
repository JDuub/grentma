<!-- Navbar -->
<nav class="navbar navbar-light" style="background-color: #D490BF;">
  <div class="container-fluid">
    <div class="mx-auto">
      <div class="form-group" >
        <label for="exampleInputEmail1"></label>
        <a button class="btn btn-info" href="#searchModal" data-bs-toggle="modal" class="form-control" aria-describedby="emailHelp">Find your Grandma</a>
        <small id="emailHelp" class="form-text text-muted"></small>
      </div>
    </div>
  </div>
</nav>

<!-- Search modal code -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Search for a Grandma</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="search">
            <%= form_tag search_grandmas_path, method: :get do %>
              <div class="row">
                <div class="col-md-12">
                  <div class="search-1">
                    <i class='bx bx-search-alt'></i>
                    <%= text_field_tag :query, nil, class: "form-control form-control-lg", placeholder: "Search for a Grandma" %>
                  </div>
                </div>
              </div>
              <div class="row mt-2">
                <div class="col-md-12">
                  <%= submit_tag "Search", class: "btn btn-info btn-lg w-100" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
